.top {
  width: 100%;
  height: 16rem;
  position: relative;
}

.top .top-bc {
  width: 100%;
  height: 100%;
}

.top .user {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 6rem;
  height: 6rem;
  text-align: center;
}


.top .user .user-img {
  border-radius: 50%;
  width: 5rem;
  height: 5rem;
}

.top .user .user-name {
  font-size: 14px;
  font-family: "Microsoft Yahei";
}


.top .show-user-btn {
  font-size: 12px;
  color: #fff;
  background-color: springgreen;
  width: 4rem;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

