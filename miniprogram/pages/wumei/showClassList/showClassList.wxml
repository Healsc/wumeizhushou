<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">课表信息</view>
</cu-custom>

	<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
		<block wx:for="{{weekList}}" wx:key="index">
			<view class="cu-item arrow" data-weekid="{{item._weekid}}" bindtap="showModal" data-target="DrawerModalR">
				<view class="content" data-weekid="{{item._weekid}}" hover-class="none">
					<text class="text-grey"   data-weekid="{{item._weekid}}">第{{item._weekid}}周课表信息</text>
				</view>
			</view>
		</block>

	</view>


	<view class="cu-modal drawer-modal justify-end {{modalName=='DrawerModalR'?'show':''}}" bindtap="hideModal">
		<view class="cu-dialog basis-lg" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
			<view class="cu-list menu text-left">
				<view class="cu-item">
					<view class="content">
						<view>第{{weekid}}周课表信息</view>
					</view>
				</view>
				<view class="cu-item arrow" wx:for="{{departmentList}}" wx:key="index">
					<view class="content" data-wid="{{weekid}}" data-did="{{item}}" bindtap="goShowClassDetail">
						<view data-wid="{{weekid}}" data-did="{{item}}">{{item}}</view>
					</view>
				</view>
			</view>
		</view>
	</view>
