.table {
    border: 0px solid darkgray;
    background-color: #ffffff;
}
.th {
    width: 40%;
    justify-content: center;
  /*   background: linear-gradient(#A0EEE1, #BEEDC7); */
    color: #fff;
    display: flex;
    height: 4rem;
    align-items: center;
}

.tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 4rem;
    align-items: center;
    margin: 0 0 10rpx 0;
    padding-right: 8rpx;
}

.td {
    margin: 4rpx;
    width: 40%;
    justify-content: center;
    text-align: center;
    flex: 1;
    height: 4rem;
    display: flex;
    align-items: center;
}
