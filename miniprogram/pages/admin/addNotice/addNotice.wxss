@import "../common/lib/weui.wxss";
@import "./assets/iconfont.wxss";


.content{
  margin-top: 180rpx;
}
.container {
 /*  position: absolute; 
  top: 4rem; 
  left: 0;  */
  width: 100%;
  margin-top: 10rpx;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px 0 10px;
  height: 200rpx;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
  flex-wrap: wrap;
  justify-content: space-between;
 
}
.toolbar .wrap{
  flex-basis: 16%;
  text-align: center;
 
}

